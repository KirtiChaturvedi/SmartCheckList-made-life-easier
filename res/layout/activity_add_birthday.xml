<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".AddBirthday" 
     android:keepScreenOn="true"
     android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:paddingTop="2dp"
        android:layout_marginLeft="85dp"
        android:text="Add Birthday"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#A319D1"
        android:textStyle="bold|italic" />

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   
      
        android:layout_marginLeft="27dp"
        
        android:layout_marginTop="35dp"
        android:src="@drawable/asdp" />
    
    <LinearLayout 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <EditText
            android:id="@+id/editText1"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
        
            android:layout_marginLeft="5dp"
            android:layout_marginTop="23dp"
            
            android:ems="10"
            android:hint="First Name"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Last Name"
            android:layout_marginLeft="5dp"
            android:inputType="textCapWords" >

        <requestFocus />
    </EditText>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewpic"
        android:layout_width="60dp"
        android:layout_height="90dp"
        
        android:onClick="loadImagefromGallery"
        android:layout_marginLeft="5dp"
        android:src="@drawable/asdddd"
        android:layout_marginTop="22dp" />
        
    </LinearLayout>
	<LinearLayout 
	     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
	    >
	    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="27dp"
        android:src="@drawable/email" />

	    <EditText
	        android:id="@+id/editText3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	      
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="2dp"
	        android:ems="10"
	        android:hint="Email (Optional)"
	        android:inputType="textEmailAddress" />
	    
	</LinearLayout>

	<LinearLayout 
	     android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="5dp">
	    <ImageView
	    android:id="@+id/imageView3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="40dp"
	    android:layout_marginLeft="27dp"
	    android:src="@drawable/p1" />
	    
	    <EditText
	        android:id="@+id/editText4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    
	        android:layout_marginTop="45dp"
	        android:ems="10"
	        android:layout_marginLeft="5dp"
	        android:hint="Contact no."
	        android:inputType="phone" />

	</LinearLayout>
	

    <LinearLayout 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        >
        <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    
        android:layout_marginTop="5dp"
       
         android:layout_marginLeft="27dp"
        android:src="@drawable/c3" />
        <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
        android:ems="10"
        android:hint="dd/mm/yyyy" 
        android:layout_marginTop="9dp"
        android:layout_marginLeft="5dp"
        android:editable="false"
        android:inputType="none"
      />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/a1" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:editable="false"
            android:ems="10"
            android:hint="Alarm Time"
            android:inputType="none" />

        <Spinner
            android:id="@+id/spinneradd"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            />
           
    </LinearLayout>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="65dp"
        >
        <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
   
        android:layout_marginBottom="17dp"
      
        android:background="#CC7EE5"
        android:text="Add"
        android:textSize="20dp"
        android:textStyle="bold" />
        <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
      
        android:text="Cancel"
        android:layout_marginLeft="9dp"
        android:background="#CC7EE5"
        android:textSize="20dp"
        android:textStyle="bold" />
        
    </LinearLayout>
=
</LinearLayout>