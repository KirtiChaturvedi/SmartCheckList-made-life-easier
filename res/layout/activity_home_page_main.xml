<LinearLayout 
    tools:context=".HomePageMain" 
    android:orientation="vertical" 
    android:layout_height="fill_parent"  
    android:layout_width="match_parent" 
    xmlns:tools="http://schemas.android.com/tools" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#99003D"
    >

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/Girls"
            android:layout_width="180dp"
            android:layout_height="178dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/girlnew" />
         <ImageButton 
             android:id="@+id/browsegirl"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="100dp"
             android:background="#99003D"
             android:src="@drawable/browse"
            
             />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="212dp"
    android:orientation="horizontal">
<ImageView 
    android:layout_marginTop="10dp" 
    android:layout_height="178dp" 
    android:layout_width="180dp" 
     android:layout_marginLeft="70dp"
    android:src="@drawable/boynew" 
    android:layout_gravity="center" 
    android:id="@+id/Boys"/>

<ImageButton 
    android:id="@+id/browseboy"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:background="#99003D"
    android:src="@drawable/browse"
 />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView 
    android:id="@+id/abtus"
    android:layout_marginTop="20dp" 
    android:layout_height="50dp" 
    android:layout_width="50dp" 
    android:paddingLeft="10dp"
    android:src="@drawable/abtus" 
    />
<ImageView 
    android:id="@+id/abtapp"
    android:layout_marginTop="20dp" 
    android:layout_height="50dp" 
    android:layout_width="50dp" 
    android:paddingLeft="10dp"
    android:src="@drawable/abtapp" 
    />

<ImageView
    android:id="@+id/favlist"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginLeft="120dp"
    android:layout_marginTop="20dp"
     android:paddingLeft="10dp"
    android:src="@drawable/fav5"
    android:background="#99003D"  />

<ImageView 
    android:id="@+id/abtapp"
    android:layout_marginTop="20dp" 
    android:layout_height="50dp" 
    android:layout_width="50dp" 
    android:paddingLeft="10dp"
    android:src="@drawable/abtapp" 
    />

</LinearLayout>
</LinearLayout>